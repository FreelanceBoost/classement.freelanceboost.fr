@import "foundation_and_overrides";

@font-face {
    font-family: 'BebasNeue';
    src: url('<%= asset_path('BebasNeue-webfont.eot') %>');
    src: url('<%= asset_path('BebasNeue-webfont.eot?#iefix') %>') format('embedded-opentype'),
         url('<%= asset_path('BebasNeue-webfont.woff') %>') format('woff'),
         url('<%= asset_path('BebasNeue-webfont.ttf') %>') format('truetype'),
         url('<%= asset_path('BebasNeue-webfont.svg#bebas_neueregular') %>') format('svg');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'Big Noodle Titling';
    src: url('<%= asset_path('big_noodle_titling-webfont.eot') %>');
    src: url('<%= asset_path('big_noodle_titling-webfont.eot?#iefix') %>') format('embedded-opentype'),
         url('<%= asset_path('big_noodle_titling-webfont.woff') %>') format('woff'),
         url('<%= asset_path('big_noodle_titling-webfont.ttf') %>') format('truetype'),
         url('<%= asset_path('big_noodle_titling-webfont.svg#bignoodletitlingregular') %>') format('svg');
    font-weight: normal;
    font-style: normal;

}

$padding: 7px;

body {
	font-weight: 300;
	line-height: 1.4;
	font-family: 'Open Sans';
	background-color: #2cb974;
	color: #fff;
	text-align: center;
	padding: 87px 0 60px;
}

.l-intro {		
	h1 {
		font-family: 'Big Noodle Titling';
		font-size: 98px;
		font-weight: 300;
		line-height: .9;
		margin: 0;
		color: #fff;
	}
	p {
		font-size: 27px;
		margin: 0 0 2em;
		line-height: 1.3;
	}
}


.main {
	padding: $padding;
	max-width: 1000px;	
	input[type="text"] {
		width: 100%;
		box-sizing: border-box;
		-moz-box-sizing: border-box;
		padding: 35px;
		border: none;
		font-size: 1.5em;
		font-weight: light;
		color: #777;
		border: solid 2px rgba(57,57,57,.16);
		box-shadow: inset 0 4px 0 rgba(35,31,32,.08);
		-moz-box-shadow: inset 0 4px 0 rgba(35,31,32,.08);
		-webkit-box-shadow: inset 0 4px 0 rgba(35,31,32,.08);
		border-radius: 2px;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		outline: none;
		margin: 0;
	}
	button[type="submit"] {
		display: inline-block;
		font-size: 1.5em;
		right: -2px;
		padding: 1em;
		position: absolute;
		color: #fff;
		background-color: #1ca863;
		border: solid 2px #1ba562;
		border-radius: 0 2px 2px 0;
		-moz-border-radius: 0 2px 2px 0;
		-webkit-border-radius: 0 2px 2px 0;
		box-shadow: inset 0 1px 0 rgba(255,255,255,.28);
		-moz-box-shadow: inset 0 1px 0 rgba(255,255,255,.28);
		-webkit-box-shadow: inset 0 1px 0 rgba(255,255,255,.28);
		cursor: pointer;
		-webkit-appearance: none;
		height: 100%;
	}

}

.avatar {				
	border-radius: 50%;
	float: left;
}

.container-avatar{
	padding-right: 5px;
}

.rockstar{
	padding-bottom: 10px;
}

.link-freelance{
	padding-right: 2px;
	padding-left: 27px;
}

.bio{
	padding-left: 100px;
}

@media only screen and (max-width: 800px) {

	$padding: 10px;
	$middle: 40%;

	.main {
		padding: $padding;
		text-align: center;	
		overflow: hidden;	
	}

	.avatar {				
		float: none;
		display: block;
		position: relative;
		left: $middle;
	}
	.link-freelance{		
		padding-left: 0;
	}

	.bio{
		padding-left: 0;
	}
}	