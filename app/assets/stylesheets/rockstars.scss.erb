@import "foundation_and_overrides";

@font-face {
    font-family: 'BebasNeue';
    src: url('<%= asset_path('BebasNeue-webfont.eot') %>');
    src: url('<%= asset_path('BebasNeue-webfont.eot?#iefix') %>') format('embedded-opentype'),
         url('<%= asset_path('BebasNeue-webfont.woff') %>') format('woff'),
         url('<%= asset_path('BebasNeue-webfont.ttf') %>') format('truetype'),
         url('<%= asset_path('BebasNeue-webfont.svg#bebas_neueregular') %>') format('svg');
    font-weight: normal;
    font-style: normal;

}

$padding: 7px;

body{
	line-height: 1.4;
	font-family: "Helvetica Neue", Helvetica;
}

h1 {
	font-family: 'BebasNeue';
}

.main {
	padding: $padding;
	max-width: 800px;
}

.avatar {				
	border-radius: 50%;
	float: left;
}

.container-avatar{
	padding-right: 5px;
}

.rockstar{
	padding-bottom: 10px;
}

.link-freelance{
	padding-right: 2px;
	padding-left: 27px;
}

.bio{
	padding-left: 100px;
}

@media only screen and (max-width: 800px) {

	$padding: 10px;
	$middle: 40%;

	.main {
		padding: $padding;
		text-align: center;	
		overflow: hidden;	
	}

	.avatar {				
		float: none;
		display: block;
		position: relative;
		left: $middle;
	}
	.link-freelance{		
		padding-left: 0;
	}

	.bio{
		padding-left: 0;
	}
}