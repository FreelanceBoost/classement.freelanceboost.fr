<%= render "shared/tabs" %>
<section class="l-adding main">
  <div class="l-constrained-small">
    <h2>Si vous Ãªtes freelance ajoutez votre nom GitHub ci-dessous</h2>
    <%= form_tag("/githubers") do %>
    <div id="pseudo-form" style="position:relative">
      <input type="text" id="pseudo" name="login" placeholder="Votre pseudo GitHub" value="" autocomplete="off">
      <button type="submit" class="button postfix">Ok</button>
