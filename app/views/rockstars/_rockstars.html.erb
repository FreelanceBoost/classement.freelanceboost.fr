<% @rockstars.each_with_index do |item,index| %>
  <div class="rockstar" id="rockstar-<%= item.pseudo %>">
    <div class="container-avatar">
      <a href="https://twitter.com/intent/follow?screen_name=<%= item.pseudo %>" rel="nofollow" target="_blank">
        <%= image_tag item.url_img, alt: item.pseudo, lazy: true, class: 'avatar' %>
        <div class="container-avatar-index"><%= index+1 %></div>
    </div>
    <div class="rockstar-description">
      <a class="link-freelance" href="https://twitter.com/intent/follow?screen_name=<%= item.pseudo %>" rel="nofollow" target="_blank">
        <strong class="name"><%= item.name %></strong>
        @<%= item.pseudo %>
      </a>
      <small class="location"><%= item.location %></small>
      <p class="bio"><%= item.desc %>
        <br/>
        <span class='followers'><%= item.follower_count %> abonn√©s</span>
      </p>
    </div>
  </div>
<% end %>
