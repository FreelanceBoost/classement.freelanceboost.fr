<% @title = t('share') %>
<section class="l-intro">
  <div class="l-constrained-small centered">
    <h1>Bien joué !</h1>
</div>
</section>
<section class="l-rockstar">
  <div class="l-constrained-small centered">
	<p>
		<div class="l-share-txt">
			<div id="twitter-share"><%= t('share') %></div>
			<div class="fb-share-button"
        	data-href="http://classement.freelanceboost.fr?share=true"
        	data-layout="button" style="margin: 0;padding: 0;top: -10px;"></div>
		</div>
		<script>
			twttr
			.widgets
			.createShareButton('http://classement.freelanceboost.fr/?share=true',
				document.getElementById('twitter-share'),
				{
					text: "<%= t('share') %>",
					count: 'none',
					url: 'http://classement.freelanceboost.fr/?share=true',
					hashtags: 'freelance',
					via: 'freelanceboost'
				});
		</script>


	</p>


	<p>À bientôt sur <a href="http://freelanceboost.fr/">FreelanceBoost</a>.</p>
</section>